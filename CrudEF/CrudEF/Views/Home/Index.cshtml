@model IEnumerable<CrudEF.Models.Usuario>

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-action="Create" asp-controller="Home" class=" btn btn-success">
                <i class="fas fa-plus">Nuevo Usuario</i>
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Lista de usuarios</strong></h3>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0) 
                { 
                    <table class="table table-bordered" id="tablaUsuarios" width="100%" cellpadding="0">
                        <thead>
                            <tr>
                                <th> @Html.DisplayNameFor(m => m.Nombre)</th>
                                <th> @Html.DisplayNameFor(m => m.Telefono)</th>
                                <th> @Html.DisplayNameFor(m => m.Celular)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Nombre)</td>
                                    <td>@Html.DisplayFor(m => item.Telefono)</td>
                                    <td>@Html.DisplayFor(m => item.Celular)</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalle</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                } 
                else
                {
                    <p>No hay registros</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
<script>
    $(document).ready(function () {
        $('#tablaUsuarios').DataTable({
            language: {
                "decimal": "",
                "emptyTable": "No hay registros.",
                "info": "Mostrando _START_ a _END_ de _TOTAL_ registros.",
                "infoEmpty": "Mostrando 0 registros",
                "infoFiltered": "Filtrando de _MAX_ registros",
                "infoPostFix": "",
                "thousands": ".",
                "lengthMenu": "Mostrar _MENU_ registros",
                "loadingRecords": "Cargando....",
                "processing": "Procesandoo..",
                "search": "Buscar",
                "zeroRecords": "Sin resultados!",
                "paginate": {
                    "first": "primero",
                    "last": "ultimo",
                    "next": "siguiente",
                    "previous": "anterior"
                }
            }
        });
    })
</script>
}
